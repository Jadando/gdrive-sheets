{
  "compilerOptions": {
    "target": "ES2022",                      // <== importante!
    "module": "NodeNext",                    // <== se estiver usando imports modernos
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true              // <== pra suportar [...new Set()]
  },
  "include": ["index.ts"]
}
